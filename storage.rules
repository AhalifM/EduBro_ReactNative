rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow full access to all documents for any user (even unauthenticated)
    // This is very permissive but will help diagnose if permissions are the issue
    match /{document=**} {
      allow read, write: if true;
    }
    
    // Public read-only access to specific collections if needed
    match /publicData/{document=**} {
      allow read: if true;
    }
  }
}